    <!-- Flash-сообщения -->
    <?php if (!empty($flash['success'])): ?>
        <?php foreach ($flash['success'] as $msg): ?>
            <div class="alert alert-success"><?= htmlspecialchars($msg) ?></div>
        <?php endforeach; ?>
    <?php endif; ?>
    <?php if (!empty($flash['error'])): ?>
        <?php foreach ($flash['error'] as $msg): ?>
            <div class="alert alert-danger"><?= htmlspecialchars($msg) ?></div>
        <?php endforeach; ?>
    <?php endif; ?>

    <h1>Сайт: <?= htmlspecialchars($url['name']) ?></h1>
    <table class="table" data-test="url">
        <tr>
            <th>ID</th>
            <td><?= $url['id'] ?></td>
        </tr>
        <tr>
            <th>Имя</th>
            <td><?= htmlspecialchars($url['name']) ?></td>
        </tr>
        <tr>
            <th>Дата создания</th>
            <td><?= $url['created_at'] ?></td>
        </tr>
    </table>

    <!-- Форма проверки -->
    <form method="post" action="/urls/<?= $url['id'] ?>/checks" class="mb-4">
        <button type="submit" class="btn btn-primary">Запустить проверку</button>
    </form>

    <!-- Таблица проверок -->
    <h2>Проверки</h2>
    <table class="table" data-test="checks">
        <thead>
        <tr>
            <th>ID</th>
            <th>Дата проверки</th>
            <th>Код ответа</th>
            <th>h1</th>
            <th>title</th>
            <th>description</th>
        </tr>
        </thead>
        <tbody>
        <?php if (!empty($checks)): ?>
            <?php foreach ($checks as $check): ?>
                <tr>
                    <td><?= $check['id'] ?></td>
                    <td><?= $check['created_at'] ?></td>
                    <td><?= $check['status_code'] ?? '' ?></td>
                    <td><?= htmlspecialchars($check['h1'] ?? '') ?></td>
                    <td><?= htmlspecialchars($check['title'] ?? '') ?></td>
                    <td><?= htmlspecialchars($check['description'] ?? '') ?></td>
                </tr>
            <?php endforeach; ?>
        <?php else: ?>
            <tr>
                <td colspan="6">Проверок пока нет</td>
            </tr>
        <?php endif; ?>
        </tbody>
    </table>
